header(ng-controller="headerController")
  div#main-box
    a#wordmark-link(ui-sref="main")
      //-  ui-sref-opts="{reload: true}" to forget prev search
      h1#wordmark
        span.college-name Carleton
        span.app-name
          | Hits
          span.interject  the 
          | Books
    ul#college-info
      li #{numListings} books available
      li #{numOffers} successful listings
      li #{numUsers} active users
  div#blurb
    | Welcome to the streamlined platform for buying, selling, and trading textbooks face-to-face.
    | By Carls for Carls. 
    a(class="toAbout", href="#about") Learn more...
    a(class="close", ng-click="closeBlurb()") Ã—
  div#sub-box
    if loggedIn
      a(href="#dashboard") Dashboard
    else
      a(href="#about") About
      a(ui-sref='account.access') Sign in or Register
  include modals
